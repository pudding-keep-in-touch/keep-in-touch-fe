{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",
    "paths": {
      "@/app/*": ["app/*"],
      "@/entities/*": ["entities/*"],
      "@/features/*": ["features/*"],
      "@/shared/*": ["shared/*"],
      "@/widgets/*": ["widgets/*"]
    },
    "types": ["@vitest/browser/providers/playwright"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/channeltalk/channeltalk.js"
  ],
  "exclude": ["node_modules"]
}
